#!/bin/sh

# Colors and formatting
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

# Divider line
DIVIDER="â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

printf "\n"
printf "${CYAN}${DIVIDER}${NC}\n"
printf "${BOLD}${BLUE}ğŸ” Pre-commit Checks${NC}\n"
printf "${CYAN}${DIVIDER}${NC}\n"
printf "\n"

# Step 1: ktlint
printf "${YELLOW}ğŸ“ Step 1/1: Running ktlint...${NC}\n"
printf "   ${CYAN}â†’ Checking code style and formatting${NC}\n"
printf "\n"

./gradlew ktlintCheck --daemon -q

status=$?

printf "\n"
printf "${CYAN}${DIVIDER}${NC}\n"

if [ $status -eq 0 ]; then
    printf "${GREEN}${BOLD}âœ… All checks passed!${NC}\n"
    printf "${GREEN}   Your commit is ready.${NC}\n"
    printf "${CYAN}${DIVIDER}${NC}\n"
    printf "\n"
    exit 0
else
    printf "${RED}${BOLD}âŒ ktlint check failed!${NC}\n"
    printf "${RED}   Please fix the lint errors before committing.${NC}\n"
    printf "\n"
    printf "${YELLOW}ğŸ’¡ Tip: Run './gradlew ktlintFormat' to auto-fix issues${NC}\n"
    printf "${CYAN}${DIVIDER}${NC}\n"
    printf "\n"
    exit 1
fi

