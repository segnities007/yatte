#!/bin/sh

# Colors and formatting
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Divider line
DIVIDER="â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

echo ""
echo "${CYAN}${DIVIDER}${NC}"
echo "${BOLD}${BLUE}ğŸ” Pre-commit Checks${NC}"
echo "${CYAN}${DIVIDER}${NC}"
echo ""

# Step 1: ktlint
echo "${YELLOW}ğŸ“ Step 1/1: Running ktlint...${NC}"
echo "   ${CYAN}â†’ Checking code style and formatting${NC}"
echo ""

./gradlew ktlintCheck --daemon -q

status=$?

echo ""
echo "${CYAN}${DIVIDER}${NC}"

if [ $status -eq 0 ]; then
    echo "${GREEN}${BOLD}âœ… All checks passed!${NC}"
    echo "${GREEN}   Your commit is ready.${NC}"
    echo "${CYAN}${DIVIDER}${NC}"
    echo ""
    exit 0
else
    echo "${RED}${BOLD}âŒ ktlint check failed!${NC}"
    echo "${RED}   Please fix the lint errors before committing.${NC}"
    echo ""
    echo "${YELLOW}ğŸ’¡ Tip: Run './gradlew ktlintFormat' to auto-fix issues${NC}"
    echo "${CYAN}${DIVIDER}${NC}"
    echo ""
    exit 1
fi
