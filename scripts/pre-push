#!/bin/sh

# Colors and formatting
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Divider line
DIVIDER="â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

echo ""
echo "${CYAN}${DIVIDER}${NC}"
echo "${BOLD}${BLUE}ğŸš€ Pre-push Checks${NC}"
echo "${CYAN}${DIVIDER}${NC}"
echo ""

# Step 1: Unit Tests
echo "${YELLOW}ğŸ§ª Step 1/2: Running Unit Tests...${NC}"
echo "   ${CYAN}â†’ Verifying code correctness${NC}"
echo ""

./gradlew test --daemon -q
test_status=$?

echo ""

if [ $test_status -ne 0 ]; then
    echo "${CYAN}${DIVIDER}${NC}"
    echo "${RED}${BOLD}âŒ Unit tests failed!${NC}"
    echo "${RED}   Please fix failing tests before pushing.${NC}"
    echo "${CYAN}${DIVIDER}${NC}"
    echo ""
    exit 1
fi

echo "${GREEN}   âœ“ Unit tests passed${NC}"
echo ""

# Step 2: Detekt
echo "${YELLOW}ğŸ”¬ Step 2/2: Running Detekt...${NC}"
echo "   ${CYAN}â†’ Analyzing code quality${NC}"
echo ""

./gradlew detekt --daemon -q
detekt_status=$?

echo ""
echo "${CYAN}${DIVIDER}${NC}"

if [ $detekt_status -eq 0 ]; then
    echo "${GREEN}${BOLD}âœ… All checks passed!${NC}"
    echo "${GREEN}   Your push is ready.${NC}"
    echo "${CYAN}${DIVIDER}${NC}"
    echo ""
    exit 0
else
    echo "${RED}${BOLD}âŒ Detekt check failed!${NC}"
    echo "${RED}   Please fix code quality issues before pushing.${NC}"
    echo ""
    echo "${YELLOW}ğŸ’¡ Tip: Check 'composeApp/build/reports/detekt/' for details${NC}"
    echo "${CYAN}${DIVIDER}${NC}"
    echo ""
    exit 1
fi
