#!/bin/sh

# Colors and formatting
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

# Divider line
DIVIDER="â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

printf "\n"
printf "${CYAN}${DIVIDER}${NC}\n"
printf "${BOLD}${BLUE}ğŸš€ Pre-push Checks${NC}\n"
printf "${CYAN}${DIVIDER}${NC}\n"
printf "\n"

# Step 1: Unit Tests
printf "${YELLOW}ğŸ§ª Step 1/2: Running Unit Tests...${NC}\n"
printf "   ${CYAN}â†’ Verifying code correctness${NC}\n"
printf "\n"

./gradlew test --daemon -q
test_status=$?

printf "\n"

if [ $test_status -ne 0 ]; then
    printf "${CYAN}${DIVIDER}${NC}\n"
    printf "${RED}${BOLD}âŒ Unit tests failed!${NC}\n"
    printf "${RED}   Please fix failing tests before pushing.${NC}\n"
    printf "${CYAN}${DIVIDER}${NC}\n"
    printf "\n"
    exit 1
fi

printf "${GREEN}   âœ“ Unit tests passed${NC}\n"
printf "\n"

# Step 2: Detekt
printf "${YELLOW}ğŸ”¬ Step 2/2: Running Detekt...${NC}\n"
printf "   ${CYAN}â†’ Analyzing code quality${NC}\n"
printf "\n"

./gradlew detekt --daemon -q
detekt_status=$?

printf "\n"
printf "${CYAN}${DIVIDER}${NC}\n"

if [ $detekt_status -eq 0 ]; then
    printf "${GREEN}${BOLD}âœ… All checks passed!${NC}\n"
    printf "${GREEN}   Your push is ready.${NC}\n"
    printf "${CYAN}${DIVIDER}${NC}\n"
    printf "\n"
    exit 0
else
    printf "${RED}${BOLD}âŒ Detekt check failed!${NC}\n"
    printf "${RED}   Please fix code quality issues before pushing.${NC}\n"
    printf "\n"
    printf "${YELLOW}ğŸ’¡ Tip: Check 'composeApp/build/reports/detekt/' for details${NC}\n"
    printf "${CYAN}${DIVIDER}${NC}\n"
    printf "\n"
    exit 1
fi

